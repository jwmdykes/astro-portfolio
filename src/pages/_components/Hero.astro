---
import Email from '@/assets/icons/email.svg'
import Github from '@/assets/icons/github.svg'
import Medium from '@/assets/icons/medium.svg'
import YouTube from '@/assets/icons/youtube.svg'

import Down from '@/assets/icons/down.svg'

export const socialLinks = [
    {
        icon: Github,
        href: 'https://github.com/jwmdykes',
        width: '28px',
        height: '28px',
        label: 'Github',
    },
    {
        icon: YouTube,
        href: 'https://www.youtube.com/@aByteWizard',
        width: '30px',
        height: '30px',
        label: 'Youtube',
    },
    {
        icon: Medium,
        href: 'https://medium.com/@98johndykes',
        width: '36px',
        height: '36px',
        label: 'Medium',
    },
    {
        icon: Email,
        href: 'mailto:98johndykes@gmail.com',
        width: '28px',
        height: '28px',
        label: 'Email',
    },
]
import Section from '@/components/Section.astro'
import HeroParticles from '@/components/HeroParticles.astro'
import Mountains from '@/assets/design/mountains.svg'
---

<Section class="flex flex-col items-center justify-center relative">
    <div
        class="-mt-12 px-6 py-6 flex flex-col items-center justify-center rounded-full bg-radial from-background from-30% to-transparent z-10 text-center animate-fastFadeIn"
    >
        <div class="text-5xl sm:text-7xl font-bold">John Dykes</div>
        <div class="text-lg sm:text-2xl mt-4 sm:mt-6 text-neutral-700">
            Full Stack Web and AI Developer
        </div>
        <hr class="w-full h-1.5 my-6 bg-neutral-200 rounded-full border-none" />
        <ul class="flex items-center justify-center gap-4 fill-current">
            {
                socialLinks.map((link) => (
                    <li>
                        <a href={link.href} aria-label={link.label}>
                            {
                                <link.icon
                                    width={link.width}
                                    height={link.height}
                                />
                            }
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>

    <div
        class="absolute bottom-0 left-0 w-full overflow-hidden z-20 flex items-center justify-center animate-fadeIn"
    >
        <Mountains class="max-w-4xl min-w-xl mx-auto" />
        <div
            class="flex flex-col items-center gap-0.5 md:gap-1 absolute bottom-3 md:bottom-4 left-1/2 -translate-x-1/2 font-medium text-xs md:text-sm"
        >
            Scroll
            <Down class="w-6 h-6 md:w-8 md:h-8" />
        </div>
    </div>

    <HeroParticles />
</Section>

<style>
    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(30%);
        }
        100% {
            opacity: 1;
            transform: translateY(0%);
        }
    }

    .animate-fadeIn {
        animation: 1.8s fadeIn;
    }

    .animate-fastFadeIn {
        animation: 0.8s fadeIn;
    }
</style>
