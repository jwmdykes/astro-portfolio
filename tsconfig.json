{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/pages/_components/*"],
            "@/layouts/*": ["src/pages/_layouts/*"],
            "@/assets/*": ["src/assets/*"]
        },
        "types": ["astro/client", "astro/astro-jsx"]
    }
}
